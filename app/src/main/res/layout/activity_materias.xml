<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Materias">
    
    <EditText
        android:id="@+id/etxt_NombreDeMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Materia"/>
    <Button
        android:id="@+id/btn_AgragarAct2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_below="@+id/etxt_NombreDeMateria"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo"
        android:layout_below="@+id/etxt_NombreDeMateria"
        android:layout_alignParentRight="true"/>

    <ListView
        android:id="@+id/lstV_Materias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_AgragarAct2">

    </ListView>
</RelativeLayout>